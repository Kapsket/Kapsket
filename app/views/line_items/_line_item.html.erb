        </div> %>
        <div class="column">
            <%= form_for @line_item, :url => {:controller => 'line_items', :action => 'update', id: line_item.id}, line_item: @line_item, method: 'put', class:"button is-small mb4",onchange: 'this.form.submit();' do |f|%>
                    <%= f.number_field :quantity, :value => line_item.quantity %>
                    <%= submit_tag "Update" %>
                
            <% end %>
            </div>
            <div class="has-text-right">
            <strong class="f4"><%= number_to_currency(line_item.total_price) %></strong>
            </div>
            </div>
            </div>
            <div class="has-text-right">
    <%= link_to 'Remove Item', line_item, method: :delete, data: { confirm: " Are you sure? " }, class:"button is-small mb4" %>
      </div>
     </div>
    </div>
   </div>